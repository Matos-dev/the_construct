<%%= form_with(model: <%= model_resource_name %>) do |form| %>
<% attributes.each do |attribute| -%>
  <div class="form-group">
<% unless attribute.field_type == :check_box -%>
    <%%= form.label :<%= attribute.column_name %> %>
<% end -%>
<% if attribute.reference? -%>
    <%%= form.collection_select(:<%= attribute.column_name %>, <%= attribute.name.camelize %>.all, :id, :to_s, { include_blank: true }, { class: "form-control", data: { controller: "select" } }) %>
<% elsif attribute.field_type == :check_box -%>
    <label class="m-checkbox">
      <%%= form.<%= attribute.field_type %> :<%= attribute.column_name %>, class: "form-control m-input" %>
      <%%= t("activerecord.attributes.<%= singular_table_name %>.<%= attribute.column_name %>", default: "<%= attribute.human_name %>") %>
      <span></span>
    </label>
<% elsif [:date, :datetime].include?(attribute.type) -%>
    <%%= form.text_field :<%= attribute.column_name %>, value: l(<%= model_resource_name %>.<%= attribute.column_name %>), class: "form-control", data: { controller: "<%= attribute.type %>" } %>
<% elsif [:float, :decimal].include?(attribute.type) -%>
    <%%= form.text_field :<%= attribute.column_name %>, value: n(<%= model_resource_name %>.<%= attribute.column_name %>), class: "form-control m-input", data: { controller: "decimal" } %>
<% else -%>
    <%%= form.<%= attribute.field_type %> :<%= attribute.column_name %>, class: "form-control m-input" %>
<% end -%>
  </div>
<% end -%>
  <div class="card-footer pl-0">
    <%%= form.submit class: 'btn btn-success' %>
  </div>
<%% end %>
